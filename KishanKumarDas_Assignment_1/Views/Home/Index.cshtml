@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to the Utility App</h1>
        <p class="lead text-muted">Choose a tool below to get started</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm h-100 border-0 hover-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Price Quotation</h5>
                    <p class="card-text text-muted">Calculate discount and total from a subtotal and discount percentage.</p>
                    <a href="/PriceQuotation" class="btn btn-primary">Go to Price Quotation</a>
                </div>
            </div>
        </div>
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm h-100 border-0 hover-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Tip Calculator</h5>
                    <p class="card-text text-muted">Estimate tips based on your meal cost with quick percentages.</p>
                    <a href="/TipCalculator" class="btn btn-primary">Go to Tip Calculator</a>
                </div>
            </div>
        </div>
    </div>
</div>
